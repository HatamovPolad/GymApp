<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - GymApp</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/GymApp.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid position-relative">

                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">GymApp</a>

                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">

                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="Trainers" asp-action="Index">Antrenörler</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-controller="GymServices" asp-action="Index">Hizmetler</a>
                        </li>

                        @if (User.Identity.IsAuthenticated)
                        {
                            // EĞER ADMİN DEĞİLSE (SADECE ÜYEYSE) BUNLARI GÖRSÜN
                            if (!User.IsInRole("Admin"))
                            {
                                <li class="nav-item ms-3">
                                    <a class="nav-link text-primary fw-bold border border-primary rounded px-3" asp-controller="Appointments" asp-action="Create">📅 Randevu Al</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-controller="Appointments" asp-action="Index">Randevularım</a>
                                </li>

                                <li class="nav-item">
                                    <a class="nav-link text-success fw-bold" asp-controller="Ai" asp-action="Index">🤖 AI Antrenör</a>
                                </li>
                            }
                            else
                            {
                                // EĞER ADMİN İSE SADECE BUNLARI GÖRSÜN
                                <li class="nav-item ms-3">
                                    <a class="nav-link text-dark fw-bold" asp-controller="Appointments" asp-action="Index">📋 Tüm Randevular</a>
                                </li>
                            }
                        }
                    </ul>
                    @if (User.IsInRole("Admin"))
                    {
                        <div class="position-absolute start-50 translate-middle-x d-none d-md-block">
                            <a class="nav-link text-danger fw-bold fs-3 text-uppercase"
                               asp-controller="Admin" asp-action="Index"
                               style="letter-spacing: 1px; text-decoration: none;">
                                ADMIN PANELİ
                            </a>
                        </div>
                    }

                    <ul class="navbar-nav">
                        @if (!User.Identity.IsAuthenticated)
                        {
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-controller="Account" asp-action="Register">Kayıt Ol</a>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-primary ms-2" asp-controller="Account" asp-action="Login">Giriş Yap</a>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <span class="nav-link text-dark">Hoşgeldin, <strong>@User.Identity.Name</strong></span>
                            </li>
                            <li class="nav-item">
                                <a class="btn btn-danger ms-2" asp-controller="Account" asp-action="Logout">Çıkış</a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - GymApp - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>