@{
    ViewData["Title"] = "Yönetim Paneli";
}

<div class="text-center mb-5">
    <h1 class="display-4">Yönetim Paneli</h1>
    <p class="lead">Spor salonunu buradan yönetebilirsin.</p>
</div>

<div class="row justify-content-center">
    <div class="col-md-4 mb-4">
        <div class="card shadow h-100 border-primary">
            <div class="card-body text-center">
                <h3 class="card-title text-primary">Antrenörler</h3>
                <p class="card-text">Antrenör ekle, düzenle veya sil.</p>
                <a asp-controller="Trainers" asp-action="Index" class="btn btn-primary w-100">Yönet</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card shadow h-100 border-success">
            <div class="card-body text-center">
                <h3 class="card-title text-success">Salon Hizmetleri</h3>
                <p class="card-text">Fitness, Yoga, Pilates vb. hizmetleri tanımla.</p>
                <a asp-controller="GymServices" asp-action="Index" class="btn btn-success w-100">Yönet</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card shadow h-100 border-warning">
            <div class="card-body text-center">
                <h3 class="card-title text-warning">Randevular</h3>
                <p class="card-text">Onay bekleyen randevuları incele.</p>
                <a asp-controller="Appointments" asp-action="Index" class="btn btn-warning w-100">Yönet</a>
            </div>
        </div>
    </div>

    <div class="col-md-4 mb-4">
        <div class="card shadow h-100 border-secondary">
            <div class="card-body text-center">
                <h3 class="card-title text-secondary">Üyeler</h3>
                <p class="card-text">Kayıtlı kullanıcıları listele ve yönet.</p>
                <a asp-controller="Users" asp-action="Index" class="btn btn-secondary w-100">Yönet</a>
            </div>
        </div>
    </div>
</div>