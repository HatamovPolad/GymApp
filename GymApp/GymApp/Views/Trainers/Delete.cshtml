@model GymApp.Models.Trainer

@{
    ViewData["Title"] = "Antrenörü Sil";
}

<h1>Antrenörü Sil</h1>

<div class="alert alert-danger">
    <h3>Emin misin?</h3>
    <p>Bu antrenörü silmek üzeresin. Bu işlem geri alınamaz.</p>
</div>

<div>
    <h4>Antrenör Bilgileri</h4>
    <hr />
    <div class="row">
        <div class="col-md-3 text-center">
            <img src="https://ui-avatars.com/api/?name=@Model.FullName&background=random&size=200"
                 class="img-thumbnail rounded-circle mb-3" alt="@Model.FullName">
        </div>

        <div class="col-md-9">
            <dl class="row">
                <dt class="col-sm-3">
                    Ad Soyad
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.FullName)
                </dd>

                <dt class="col-sm-3">
                    Uzmanlık Alanı
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Specialization)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <button type="submit" class="btn btn-danger">
                    🗑️ Evet, Sil
                </button> |
                <a asp-action="Index" class="btn btn-secondary">Listeye Dön</a>
            </form>
        </div>
    </div>
</div>