@model GymApp.Models.Trainer

@{
    ViewData["Title"] = "Antrenör Detayı";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h3 class="mb-0">ℹ️ Antrenör Bilgileri</h3>
        </div>
        <div class="card-body">
            <dl class="row fs-5">
                <dt class="col-sm-4 text-muted">Ad Soyad:</dt>
                <dd class="col-sm-8 fw-bold">@Model.FullName</dd>

                <dt class="col-sm-4 text-muted">Uzmanlık Alanı:</dt>
                <dd class="col-sm-8">@Model.Specialization</dd>

                <hr class="my-3">

                <dt class="col-sm-4 text-muted">Mesai Başlangıç:</dt>
                <dd class="col-sm-8 fw-bold text-success">
                    @Model.WorkStartTime.ToString(@"hh\:mm")
                </dd>

                <dt class="col-sm-4 text-muted">Mesai Bitiş:</dt>
                <dd class="col-sm-8 fw-bold text-danger">
                    @Model.WorkEndTime.ToString(@"hh\:mm")
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning">✏️ Düzenle</a>
            }
            <a asp-action="Index" class="btn btn-secondary">🔙 Listeye Dön</a>
        </div>
    </div>
</div>