@model GymApp.Models.Trainer

@{
    ViewData["Title"] = "Antrenör Detayı";
}

<div class="container mt-4">
    <div class="card shadow-sm">
        <div class="card-header bg-info text-white">
            <h3>Antrenör Detayları</h3>
        </div>
        <div class="card-body">
            <div class="row align-items-center">

                <div class="col-md-4 text-center mb-3 mb-md-0">
                    <img src="https://ui-avatars.com/api/?name=@Model.FullName&background=random&size=250&font-size=0.33"
                         class="img-fluid rounded-circle shadow"
                         alt="@Model.FullName Profile">
                </div>

                <div class="col-md-8">
                    <dl class="row fs-5">
                        <dt class="col-sm-4 text-muted">
                            Ad Soyad:
                        </dt>
                        <dd class="col-sm-8 fw-bold">
                            @Html.DisplayFor(model => model.FullName)
                        </dd>

                        <dt class="col-sm-4 text-muted">
                            Uzmanlık Alanı:
                        </dt>
                        <dd class="col-sm-8">
                            <span class="badge bg-secondary">
                                @Html.DisplayFor(model => model.Specialization)
                            </span>
                        </dd>
                    </dl>

                    <div class="mt-4">
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-warning px-4 me-2">
                                ✏️ Düzenle
                            </a>
                        }

                        <a asp-action="Index" class="btn btn-outline-secondary px-4">
                            🔙 Listeye Dön
                        </a>
                    </div>
                </div>
