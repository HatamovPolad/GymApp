@model IEnumerable<GymApp.Models.Trainer>

@{
    ViewData["Title"] = "Antrenörlerimiz";
}

<div class="container mt-5">
    <div class="text-center mb-5">
        <h2 class="display-5 fw-bold text-primary">Uzman Kadromuz</h2>
        <p class="lead text-muted">Hedeflerine ulaşmanda sana rehberlik edecek profesyoneller.</p>
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary btn-lg shadow-sm rounded-pill">
                <i class="bi bi-plus-lg"></i> Yeni Antrenör Ekle
            </a>
        }
    </div>

    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4 mb-4">
                <div class="card h-100 shadow border-0 text-center p-3 hover-effect">
                    <div class="mx-auto mt-3" style="width: 120px; height: 120px; border-radius: 50%; overflow: hidden; border: 4px solid #0d6efd;">
                        <img src="https://cdn-icons-png.flaticon.com/512/4140/4140048.png" alt="Trainer" class="w-100 h-100 object-fit-cover">
                    </div>

                    <div class="card-body">
                        <h4 class="card-title fw-bold mb-1">@item.FullName</h4>
                        <span class="badge bg-warning text-dark mb-3">@item.Specialization</span>

                        <hr class="my-3 opacity-25">

                        <div class="d-flex justify-content-center gap-2">
                            @if (User.IsInRole("Admin"))
                            {
                                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">Düzenle</a>
                                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">Sil</a>
                            }
                            <a asp-controller="Appointments" asp-action="Create" class="btn btn-sm btn-success px-3">Randevu Al</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>