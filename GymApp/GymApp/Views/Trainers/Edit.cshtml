@model GymApp.Models.Trainer

@{
    ViewData["Title"] = "Antrenörü Düzenle";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h3 class="mb-0">✏️ Antrenör Bilgilerini Düzenle</h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="Id" />

                    <div class="form-group mb-3">
                        <label asp-for="FullName" class="control-label fw-bold">Ad Soyad</label>
                        <input asp-for="FullName" class="form-control" required />
                        <span asp-validation-for="FullName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Specialization" class="control-label fw-bold">Uzmanlık Alanı</label>
                        <input asp-for="Specialization" class="form-control" required />
                        <span asp-validation-for="Specialization" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="WorkStartTime" class="control-label fw-bold">Mesai Başlangıç Saati</label>
                        <input asp-for="WorkStartTime" class="form-control bg-white" type="text" id="startTimePicker" required />
                        <span asp-validation-for="WorkStartTime" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="WorkEndTime" class="control-label fw-bold">Mesai Bitiş Saati</label>
                        <input asp-for="WorkEndTime" class="form-control bg-white" type="text" id="endTimePicker" required />
                        <span asp-validation-for="WorkEndTime" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-warning fw-bold">💾 Değişiklikleri Kaydet</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="btn btn-secondary">🔙 Listeye Dön</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/tr.js"></script>

    <script>
        flatpickr("#startTimePicker", {
            enableTime: true,
            noCalendar: true,
            dateFormat: "H:i",
            time_24hr: true,
            locale: "tr"
        });

        flatpickr("#endTimePicker", {
            enableTime: true,
            noCalendar: true,
            dateFormat: "H:i",
            time_24hr: true,
            locale: "tr"
        });
    </script>
}