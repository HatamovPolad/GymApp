@model IEnumerable<GymApp.Models.GymService>

@{
    ViewData["Title"] = "Salon Hizmetleri";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>🏋️‍♂️ Salon Hizmetlerimiz</h2>
        
        @if (User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Yeni Hizmet Ekle
            </a>
        }
    </div>

    <table class="table table-hover shadow-sm">
        <thead class="table-light">
            <tr>
                <th>Hizmet Adı</th>
                <th>Açıklama</th>
                <th>Süre (Dk)</th>
                <th>Ücret</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="fw-bold">
                        @Html.DisplayFor(modelItem => item.ServiceName)
                    </td>
                    <td>
                        @if (!string.IsNullOrEmpty(item.Description) && item.Description.Length > 50)
                        {
                            @item.Description.Substring(0, 50) <span>...</span>
                        }
                        else
                        {
                            @Html.DisplayFor(modelItem => item.Description)
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DurationMinutes) dk
                    </td>
                    <td>
                        <span class="badge bg-success">@item.Price TL</span>
                    </td>
                    <td>
                        @if (User.IsInRole("Admin"))
                        {
                            <a asp-action="Edit" asp-route-id="@item.ServiceId" class="btn btn-sm btn-warning">Düzenle</a>
                            <a asp-action="Delete" asp-route-id="@item.ServiceId" class="btn btn-sm btn-danger">Sil</a>
                        }
                        
                        <a asp-action="Details" asp-route-id="@item.ServiceId" class="btn btn-sm btn-info text-white">Detay</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>