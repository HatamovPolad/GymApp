@model GymApp.Models.GymService

@{
    ViewData["Title"] = "Hizmet Detayı";
}

<div class="container mt-5">
    <div class="card shadow">
        <div class="card-header bg-primary text-white">
            <h4 class="mb-0">ℹ️ Hizmet Detayı</h4>
        </div>
        <div class="card-body">
            <dl class="row fs-5">
                <dt class="col-sm-3 text-muted">Hizmet Adı:</dt>
                <dd class="col-sm-9 fw-bold">@Html.DisplayFor(model => model.ServiceName)</dd>

                <dt class="col-sm-3 text-muted">Açıklama:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.Description)</dd>

                <dt class="col-sm-3 text-muted">Süre:</dt>
                <dd class="col-sm-9">@Html.DisplayFor(model => model.DurationMinutes) Dakika</dd>

                <dt class="col-sm-3 text-muted">Ücret:</dt>
                <dd class="col-sm-9">
                    <span class="badge bg-success fs-6">@Html.DisplayFor(model => model.Price) TL</span>
                </dd>
            </dl>
        </div>
        <div class="card-footer text-center">
            @if (User.IsInRole("Admin"))
            {
                <a asp-action="Edit" asp-route-id="@Model?.ServiceId" class="btn btn-warning px-4">✏️ Düzenle</a>
            }

            <a asp-action="Index" class="btn btn-secondary px-4">🔙 Listeye Dön</a>
        </div>
    </div>
</div>