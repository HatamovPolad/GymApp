@model GymApp.Models.GymService

@{
    ViewData["Title"] = "Hizmeti Düzenle";
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-warning text-dark">
                <h3 class="mb-0">✏️ Hizmeti Düzenle</h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <input type="hidden" asp-for="ServiceId" />

                    <div class="form-group mb-3">
                        <label asp-for="ServiceName" class="control-label fw-bold">Hizmet Adı</label>
                        <input asp-for="ServiceName" class="form-control" required />
                        <span asp-validation-for="ServiceName" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label fw-bold">Açıklama</label>
                        <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="DurationMinutes" class="control-label fw-bold">Süre (Dakika)</label>
                        <input asp-for="DurationMinutes" class="form-control" type="number" min="1" required />
                        <span asp-validation-for="DurationMinutes" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label asp-for="Price" class="control-label fw-bold">Ücret (TL)</label>
                        <input asp-for="Price" class="form-control" type="number" step="0.01" min="0" required />
                        <span asp-validation-for="Price" class="text-danger"></span>
                    </div>

                    <div class="d-grid gap-2 mt-4">
                        <button type="submit" class="btn btn-warning fw-bold">💾 Değişiklikleri Kaydet</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="btn btn-secondary">🔙 Listeye Dön</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}