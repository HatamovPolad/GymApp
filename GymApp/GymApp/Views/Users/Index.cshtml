@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityUser>

@{
    ViewData["Title"] = "Üye Yönetimi";
}

<div class="container mt-4">
    <h2>👥 Kayıtlı Üyeler</h2>
    <table class="table table-hover shadow-sm mt-3">
        <thead class="table-dark">
            <tr>
                <th>Email / Kullanıcı Adı</th>
                <th>ID</th>
                <th>İşlemler</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var user in Model)
            {
                <tr>
                    <td>@user.UserName</td>
                    <td><small class="text-muted">@user.Id</small></td>
                    <td>
                        <a asp-action="Delete" asp-route-id="@user.Id" class="btn btn-sm btn-danger">🗑️ Sil</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>