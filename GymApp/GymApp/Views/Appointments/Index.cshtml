@model IEnumerable<GymApp.Models.Appointment>

@{
    ViewData["Title"] = "Randevular";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">
                @(User.IsInRole("Admin") ? "📋 Yönetim Paneli: Randevular" : "📅 Randevularım")
            </h2>
            <small class="text-muted">
                @(User.IsInRole("Admin") ? "Üyelerin randevu taleplerini buradan yönetebilirsin." : "Spor programını buradan takip edebilirsin.")
            </small>
        </div>

        @if (!User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary shadow-sm rounded-pill px-4 py-2">
                <i class="bi bi-plus-lg"></i> Yeni Randevu Al
            </a>
        }
    </div>

    <div class="card shadow border-0 overflow-hidden rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th class="py-3 ps-4">Tarih & Saat</th>
                            <th class="py-3">Hizmet</th>
                            <th class="py-3">Ücret</th>
                            <th class="py-3">Antrenör</th>
                            <th class="py-3 text-center">Durum</th>

                            @if (User.IsInRole("Admin"))
                            {
                                <th class="py-3">Üye Bilgisi</th>
                            }
                            <th class="py-3 text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold text-primary">@item.Date.ToString("dd MMMM yyyy")</span>
                                        <small class="text-muted">Saat: @item.Date.ToString("HH:mm")</small>
                                    </div>
                                </td>

                                <td>
                                    <span class="badge bg-light text-dark border">
                                        <i class="bi bi-activity me-1"></i>
                                        @(item.GymService != null ? item.GymService.ServiceName : "Silinmiş Hizmet")
                                    </span>
                                </td>

                                <td>
                                    <span class="fw-bold text-success">
                                        @(item.GymService != null ? item.GymService.Price + " ₺" : "-")
                                    </span>
                                </td>

                                <td>
                                    <div class="d-flex align-items-center">
                                        <span>@(item.Trainer != null ? item.Trainer.FullName : "-")</span>
                                    </div>
                                </td>

                                <td class="text-center">
                                    @if (item.Status == "Bekliyor")
                                    {
                                        <span class="badge bg-warning text-dark"><i class="bi bi-hourglass-split"></i> Bekliyor</span>
                                    }
                                    else if (item.Status == "Onaylandı")
                                    {
                                        <span class="badge bg-success"><i class="bi bi-check-circle-fill"></i> Onaylandı</span>
                                    }
                                    else if (item.Status == "İptal Edildi")
                                    {
                                        <span class="badge bg-danger"><i class="bi bi-x-circle"></i> İptal</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-secondary">@item.Status</span>
                                    }
                                </td>

                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        <small class="text-muted">@(item.User != null ? item.User.Email : "?")</small>
                                    </td>
                                }

                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">

                                        @if (User.IsInRole("Admin"))
                                        {
                                            // --- ADMIN İŞLEMLERİ ---

                                            // Sadece 'Bekliyor' ise Onayla butonu çıksın
                                            if (item.Status == "Bekliyor")
                                            {
                                                <a asp-action="Approve" asp-route-id="@item.Id" class="btn btn-sm btn-success text-white" title="Onayla">
                                                    <i class="bi bi-check-lg"></i>
                                                </a>
                                            }

                                            // Admin Düzenleyebilir
                                            <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary" title="Düzenle">
                                                <i class="bi bi-pencil-fill"></i>
                                            </a>
                                        }

                                   
                                        @if (item.Status != "İptal Edildi")
                                        {
                                            <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger" title="İptal Et / Sil">
                                                <i class="bi bi-trash-fill"></i> @(User.IsInRole("Admin") ? "" : "İptal")
                                            </a>
                                        }
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5 bg-light">
                    <div class="mb-3" style="font-size: 3rem;">📅</div>
                    <h5 class="text-muted">Henüz randevu kaydı yok.</h5>
                </div>
            }
        </div>
    </div>
</div>