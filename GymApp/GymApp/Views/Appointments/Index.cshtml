@model IEnumerable<GymApp.Models.Appointment>

@{
    ViewData["Title"] = "Randevular";
}

<div class="container mt-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h2 class="fw-bold text-dark mb-0">
                @(User.IsInRole("Admin") ? "📋 Tüm Randevular" : "📅 Randevularım")
            </h2>
            <small class="text-muted">
                @(User.IsInRole("Admin") ? "Sistemdeki tüm randevuları buradan yönetebilirsin." : "Geçmiş ve gelecek antrenmanların burada.")
            </small>
        </div>

        <a asp-action="Create" class="btn btn-primary shadow-sm rounded-pill px-4 py-2">
            <i class="bi bi-plus-lg"></i> Yeni Randevu Al
        </a>
    </div>

    <div class="card shadow border-0 overflow-hidden rounded-4">
        <div class="card-body p-0">
            <div class="table-responsive">
                <table class="table table-hover align-middle mb-0">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th class="py-3 ps-4">Tarih & Saat</th>
                            <th class="py-3">Hizmet</th>
                            <th class="py-3">Antrenör</th>
                            @if (User.IsInRole("Admin"))
                            {
                                <th class="py-3">Üye Bilgisi</th>
                            }
                            <th class="py-3 text-end pe-4">İşlemler</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td class="ps-4">
                                    <div class="d-flex flex-column">
                                        <span class="fw-bold text-primary">@item.Date.ToString("dd MMMM yyyy")</span>
                                        <small class="text-muted">Saat: @item.Date.ToString("HH:mm")</small>
                                    </div>
                                </td>

                                <td>
                                    <span class="badge bg-light text-dark border">
                                        <i class="bi bi-activity me-1"></i>
                                        @(item.GymService != null ? item.GymService.ServiceName : "Silinmiş Hizmet")
                                    </span>
                                </td>

                                <td>
                                    <div class="d-flex align-items-center">
                                        <div class="bg-primary bg-opacity-10 text-primary rounded-circle d-flex justify-content-center align-items-center me-2" style="width:35px; height:35px;">
                                            <span class="fw-bold">
                                                @(item.Trainer != null && !string.IsNullOrEmpty(item.Trainer.FullName) ? item.Trainer.FullName.Substring(0, 1) : "?")
                                            </span>
                                        </div>
                                        <span>
                                            @(item.Trainer != null ? item.Trainer.FullName : "Eski Antrenör")
                                        </span>
                                    </div>
                                </td>

                                @if (User.IsInRole("Admin"))
                                {
                                    <td>
                                        <div class="d-flex align-items-center text-muted">
                                            <i class="bi bi-person-circle me-2"></i>
                                            @(item.User != null ? item.User.Email : "Bilinmiyor")
                                        </div>
                                    </td>
                                }

                                <td class="text-end pe-4">
                                    <div class="btn-group" role="group">
                                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-outline-primary">
                                            Düzenle
                                        </a>
                                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-outline-danger">
                                            İptal
                                        </a>
                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>

            @if (!Model.Any())
            {
                <div class="text-center py-5 bg-light">
                    <div class="mb-3" style="font-size: 3rem;">📅</div>
                    <h5 class="text-muted">Henüz hiç randevu yok.</h5>
                    <p class="text-muted small">Spor serüvenine başlamak için yukarıdan yeni randevu alabilirsin.</p>
                </div>
            }
        </div>
    </div>
</div>