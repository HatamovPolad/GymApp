@model IEnumerable<GymApp.Models.Appointment>

@{
    ViewData["Title"] = "Randevular";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2>📋 Randevu Yönetimi</h2>
        @if (!User.IsInRole("Admin"))
        {
            <a asp-action="Create" class="btn btn-primary shadow-sm">
                📅 Yeni Randevu Al
            </a>
        }
    </div>

    <div class="table-responsive">
        <table class="table table-hover shadow-sm align-middle">
            <thead class="table-light">
                <tr>
                    <th>Tarih</th>
                    <th>Üye</th>
                    <th>Antrenör</th>
                    <th>Hizmet</th>
                    <th>Durum</th>
                    <th>İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="fw-bold">@item.Date.ToString("dd.MM.yyyy HH:mm")</td>
                        <td>@Html.DisplayFor(modelItem => item.User.UserName)</td>
                        <td>@Html.DisplayFor(modelItem => item.Trainer.FullName)</td>
                        <td>
                            <span class="badge bg-info text-dark">
                                @Html.DisplayFor(modelItem => item.GymService.ServiceName)
                            </span>
                        </td>
                        <td>
                            @if (item.Status == "Bekliyor")
                            {
                                <span class="badge bg-warning text-dark">⏳ Bekliyor</span>
                            }
                            else if (item.Status == "Onaylandı")
                            {
                                <span class="badge bg-success">✅ Onaylandı</span>
                            }
                            else if (item.Status == "İptal Edildi")
                            {
                                <span class="badge bg-danger">⛔ İptal Edildi</span>
                            }
                            else
                            {
                                <span class="badge bg-secondary">@item.Status</span>
                            }
                        </td>
                        <td>
                            <div class="btn-group" role="group">
                                @if (User.IsInRole("Admin") && item.Status == "Bekliyor")
                                {
                                    <a asp-action="Approve" asp-route-id="@item.Id" class="btn btn-sm btn-outline-success" title="Onayla">
                                        ✅
                                    </a>
                                    <a asp-action="Cancel" asp-route-id="@item.Id" class="btn btn-sm btn-outline-dark" title="Reddet">
                                        ⛔
                                    </a>
                                }

                                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info text-white" title="Detay">
                                    ℹ️
                                </a>

                                @if (User.IsInRole("Admin") || item.UserId == User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value)
                                {
                                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger" title="Sil / İptal">
                                        🗑️
                                    </a>
                                }
                            </div>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>