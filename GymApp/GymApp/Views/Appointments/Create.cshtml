@model GymApp.Models.Appointment

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Appointment</h4>
<hr />
<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">📅 Yeni Randevu Oluştur</h3>
            </div>
            <div class="card-body">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                    <div class="form-group mb-3">
                        <label asp-for="Date" class="control-label fw-bold">Randevu Tarihi</label>
                        <input asp-for="Date" class="form-control" type="datetime-local" required />
                        <span asp-validation-for="Date" class="text-danger"></span>
                    </div>

                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Hizmet Seçiniz</label>
                        <select asp-for="GymServiceId" class="form-control" asp-items="ViewBag.GymServiceId"></select>
                    </div>

                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Antrenör Seçiniz</label>
                        <select asp-for="TrainerId" class="form-control" asp-items="ViewBag.TrainerId"></select>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-success w-100 py-2">✅ Randevuyu Onayla</button>
                    </div>
                </form>
            </div>
            <div class="card-footer text-center">
                <a asp-action="Index" class="btn btn-link">Listeye Dön</a>
            </div>
        </div>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
