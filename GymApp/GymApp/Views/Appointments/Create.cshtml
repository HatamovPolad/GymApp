@model GymApp.Models.Appointment

@{
    ViewData["Title"] = "Randevu Al";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <div class="card shadow">
            <div class="card-header bg-primary text-white">
                <h3 class="mb-0">📅 Yeni Randevu Oluştur</h3>
            </div>

            <div class="card-body">
                <form asp-action="Create">

                    @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ContainsKey(""))
                    {
                        <div class="alert alert-danger">
                            <div asp-validation-summary="ModelOnly"></div>
                        </div>
                    }

                    <div class="form-group mb-3">
                        <label asp-for="Date" class="control-label fw-bold">Randevu Tarihi</label>

                        <input asp-for="Date" class="form-control bg-white" id="randevuTarihi" type="text"
                               placeholder="Tarih ve Saat Seçiniz..." required />

                        <span asp-validation-for="Date" class="text-danger"></span>
                        <small class="text-muted d-block mt-1">
                            ℹ️ Çalışma Saatleri: <strong>09:00 - 23:00</strong> arasındadır.
                        </small>
                    </div>

                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Hizmet Seçiniz</label>
                        <select asp-for="GymServiceId" class="form-control" asp-items="ViewBag.GymServiceId"></select>
                    </div>

                    <div class="form-group mb-3">
                        <label class="control-label fw-bold">Antrenör Seçiniz</label>
                        <select asp-for="TrainerId" class="form-control" asp-items="ViewBag.TrainerId"></select>
                    </div>

                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-success w-100 py-2 fw-bold shadow-sm">
                            ✅ Randevuyu Onayla
                        </button>
                    </div>
                </form>
            </div>

            <div class="card-footer text-center">
                <a asp-action="Index" class="btn btn-outline-secondary">🔙 Listeye Dön</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://npmcdn.com/flatpickr/dist/l10n/tr.js"></script>

    <script>
        // Takvimi Başlatıyoruz
        flatpickr("#randevuTarihi", {
            enableTime: true,       // Saat seçimi açık
            time_24hr: true,        // İŞTE ÇÖZÜM: 24 Saat Formatı Zorunlu
            dateFormat: "Y-m-d H:i",// Gönderilecek format (Yıl-Ay-Gün Saat:Dakika)
            locale: "tr",           // Türkçe dil
            minDate: "today",       // Geçmiş tarih seçilemez
            minTime: "00:00",       // Sabah 9'dan önce seçilemez
            maxTime: "23:00",       // Akşam 11'den sonra seçilemez
            minuteIncrement: 1     // Dakikalar 30'ar artsın (İsteğe bağlı, silebilirsin)
        });
    </script>
}