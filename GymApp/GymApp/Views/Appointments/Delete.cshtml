@model GymApp.Models.Appointment

@{
    ViewData["Title"] = "Randevu İptal";
}

<div class="container mt-5">
    <div class="card shadow border-danger">
        <div class="card-header bg-danger text-white">
            <h3 class="mb-0">⚠️ Randevu İptali</h3>
        </div>
        <div class="card-body">
            <h4 class="text-center mb-4">Bu randevuyu silmek/iptal etmek istediğinize emin misiniz?</h4>

            <dl class="row fs-5">
                <dt class="col-sm-4 text-muted">Tarih:</dt>
                <dd class="col-sm-8 fw-bold">@Model.Date.ToString("dd.MM.yyyy HH:mm")</dd>

                <dt class="col-sm-4 text-muted">Durum:</dt>
                <dd class="col-sm-8">@Model.Status</dd>

                <dt class="col-sm-4 text-muted">Üye:</dt>
                <dd class="col-sm-8">@Model.User?.UserName</dd>
                <dt class="col-sm-4 text-muted">Antrenör:</dt>
                <dd class="col-sm-8">@Model.Trainer?.FullName</dd>
                <dt class="col-sm-4 text-muted">Hizmet:</dt>
                <dd class="col-sm-8">@Model.GymService?.ServiceName</dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="Id" />
                <div class="d-grid gap-2 d-md-flex justify-content-md-center mt-4">
                    <button type="submit" class="btn btn-danger px-5">🗑️ Evet, Sil</button>
                    <a asp-action="Index" class="btn btn-secondary px-5">Hayır, Geri Dön</a>
                </div>
            </form>
        </div>
    </div>
</div>